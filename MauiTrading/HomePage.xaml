<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiTrading.HomePage"
             xmlns:viewmodel="clr-namespace:MauiTrading.ViewModel"
             x:DataType="viewmodel:HomeViewModel">
    <ContentPage.Resources>
     <LinearGradientBrush x:Key="GradientBrush"
                             StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="{StaticResource PrimaryDark}" Offset="1"/>
            <GradientStop Color="{StaticResource SecondaryDarkText}" Offset="0.8"/>
            <GradientStop Color="Transparent" Offset="0.01"/>
        </LinearGradientBrush>
    </ContentPage.Resources>
    
    <Grid>
        <Grid Background="{x:StaticResource GradientBrush}"/>
        <Grid RowDefinitions="*, 350, 400"
              ColumnDefinitions=".50*, 400, .50*">
            <Image Source="trade.png"
                   Grid.Row="1"
                   Grid.Column="1"/>
        </Grid>

        <ScrollView>
            <FlexLayout Direction="Column" Padding="20">
                <Border Padding="20"
                        BackgroundColor="{StaticResource Tertiary}"
                        Opacity="0.5">
                    <StackLayout>

                        <Label Text="{Binding MarketStatus}"
                            FontSize="20"
                            TextColor="{StaticResource PrimaryDarkText}"
                            HorizontalOptions="Center"/>
                        <Label Text="{Binding MarketIsOpen}"
                            FontSize="14"
                            TextColor="{StaticResource PrimaryDarkText}"
                            HorizontalOptions="Center"/>
                        <Label Text="{Binding MarketHoliday}"
                            FontSize="14"
                            TextColor="{StaticResource PrimaryDarkText}"
                            HorizontalOptions="Center"/>
                        <Label Text="{Binding MarketSession}"
                            FontSize="14"
                            TextColor="{StaticResource PrimaryDarkText}"
                            HorizontalOptions="Center"/>
                    </StackLayout>
                </Border>
            </FlexLayout>
        </ScrollView>
    </Grid>
    
    </ContentPage>